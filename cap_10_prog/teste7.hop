isLower : char -> truval;
isUpper : char -> truval;
isAlpha : char -> truval;

isAlpha c <= isLower c or isUpper c;
isLower c <= 'a' =< c and c =< 'z';
isUpper c <= 'A' =< c and c =< 'Z';

